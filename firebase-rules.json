{
  "rules": {
    "public": {
      ".read": true,
      ".write": "auth != null && root.child('admins').child(auth.token.email.replace('.', ',')).exists()",
      "subjects": {
        ".read": true,
        ".write": "auth != null && root.child('admins').child(auth.token.email.replace('.', ',')).exists()"
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "progress": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "results": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "admins": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('admins').child(auth.token.email.replace('.', ',')).exists()"
    }
  }
} 