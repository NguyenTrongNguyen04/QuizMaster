{
  "rules": {
    "public": {
      ".read": true,
      ".write": "auth != null",
      "subjects": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "progress": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "results": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    }
  }
} 